---
const {title, content, bottomPosition} = Astro.props;
---

<div class="card-up__wrapper h-full">
    <article class="card-up">
        <p class="card-up__title mb-2 text-xl xl:text-2xl">{title}</p>
        <p class="card-up__content text-sm xl:text-base">{content}</p>
    </article>
    <div class="mx-auto mt-10">
        <button class={`card-up__toogle ${bottomPosition ? bottomPosition : 'bottom-0'} border-2 border-solid  px-4 py-2 pt-2.5 rounded-full justify-center flex gap-2 items-center w-fit `} >
            Ver m√°s
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                <path stroke-linecap="round" stroke-linejoin="round" d="m15 11.25-3-3m0 0-3 3m3-3v7.5M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
            </svg>
        </button>
    </div>
</div>

<style>
    .card-up__wrapper {
        position: relative;
    }
    .card-up {
        position: relative;
        height: 100%;
        text-align: center;
        display:flex;
        flex-direction: column;
        justify-content: center;
        transition: transform ease-in 0.2s ;
    }
    
    .card-up.active {
        transform: translateY(-1rem);
        transition: transform ease-out 0.3s ;
    }

    .card-up__title {
        max-width: 10ch;
        margin-inline: auto;
    }
    .card-up.active 
    .card-up__content {
        opacity: 1;
        transition: opacity ease-in 0.2s ;
    } 

    .card-up__toogle {
        position: absolute;
        left: 0;
        right: 0;
        margin-inline: auto;
        cursor: pointer;
        transition: transform ease-out 0.3s;
    }

    .card-up__toogle:hover {
        transform: scale(1.1);
        transition: transform ease-in 0.2s;

    }

    .card-up__toogle svg {
        transition: transform ease-in 0.2s ;
    }

    .card-up__toogle.active svg {
        transform: rotate(180deg);
        transition: transform ease-out 0.3s ;
    }

    .card-up__content {
        opacity: 0;
        transition: opacity ease-out 0.3s ;
    }



</style>